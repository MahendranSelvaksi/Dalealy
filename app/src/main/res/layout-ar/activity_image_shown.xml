<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".question.ImageShownActivity">


    <include layout="@layout/common_toolbar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:fillViewport="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/leaderTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="@string/new_user_label"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="@dimen/_16sdp" />

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/_200sdp"
                android:src="@drawable/students_reference"
                android:layout_margin="@dimen/_5sdp" />

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/_200sdp"
                android:src="@drawable/leader_image"
                android:layout_margin="@dimen/_5sdp" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/btIV"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_200sdp"
                android:src="@drawable/bt1"
                android:layout_margin="@dimen/_5sdp" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/cjIV"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_200sdp"
                android:src="@drawable/cj1"
                android:layout_margin="@dimen/_5sdp" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/fjIV"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_200sdp"
                android:src="@drawable/fj1"
                android:layout_margin="@dimen/_5sdp" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/fsIV"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_200sdp"
                android:src="@drawable/fs1"
                android:layout_margin="@dimen/_5sdp" />

        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/btn_next"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="5dp"
        android:padding="15dp"
        android:layout_weight="0"
        android:text="@string/next" />

</LinearLayout>